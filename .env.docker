APP_NAME="Reward Based System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=reward_system
DB_USERNAME=reward_user
DB_PASSWORD=reward_password

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=predis


MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@reward-system.com"
MAIL_FROM_NAME="${APP_NAME}"

# MeiliSearch configuration
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey

# Set some sane defaults for Docker environment
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_MEMORY_CONSUMPTION=128
PHP_MAX_EXECUTION_TIME=60
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=12M
PHP_POST_MAX_SIZE=20M

# Payment gateway mock settings for testing
PAYMENT_GATEWAY_URL=http://mock-payment:8080
PAYMENT_GATEWAY_KEY=test_key

# Feature flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_CACHING=true
ENABLE_AUDIT_LOGGING=true

# Rate limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# JWT settings if needed later
JWT_SECRET=
JWT_TTL=60
